extends ./layout/app

block variables
    - const title = "Мототехника";

block content 
    .wrapper
        header.header
            include ./chunk/top-header.pug
            include ./chunk/bottom-header.pug

        main.main 
            .breadcrumbs 
                .container 
                    ul.breadcrumbs__list
                        li.breadcrumbs__item 
                            +link("breadcrumbs__link", jsonData.nav[0].link, jsonData.nav[0].title)
                        li.breadcrumbs__item 
                            span.breadcrumbs__link.breadcrumbs__link--active Мототехника
            .catalog
                .container
                    .catalog__inner
                        button(type="button").catalog__filter-btn.js-filter-btn
                            img(src="@img/filter.svg", alt="Фильтр")
                        aside.catalog__filter
                            form(action="/").filter.js-filter
                                .filter__item
                                    +toggle-block(jsonData.togglePriceTitle, jsonData.priceInput)
                                .filter__item
                                    +check(jsonData.technicsTitle, jsonData.technics)
                                .filter__item 
                                    +check(jsonData.technicsTypeTitle, jsonData.technicsType)
                                .filter__item
                                    +check(jsonData.brandsTitle, jsonData.brands)
                                .filter__item
                                    +toggle-block(jsonData.toggleSizeTitle, jsonData.sizeInput)
                                .filter__item
                                    +radio-block(jsonData.radioMileageTitle, jsonData.radioMileage)
                                .filter__btn 
                                    button(type="submit").btn.btn--small Показать
                                .filter__reset 
                                    button.filter__reset-btn Сбросить настройки
                        .catalog__products
                            .catalog__sorting 
                                include ./chunk/sorting.pug
                            .catalog__cards 
                                +cards(jsonCards.moto)
                            .catalog__pagination
                                include ./chunk/pagination.pug
                            .catalog__text
                                p Представляем вашему вниманию каталог мотоциклов с ценами и характеристиками. На данной странице представлены практически все бренды мотоциклов, скутеров и квадроциклов, продажа которых осуществляется на территории Ивановской области в официальных автосалонах. Каталог мототехники содержит подробную информацию о характеристиках и актуальных ценах на новые модели. 
                                p Благодаря разработанным сервисам, любой посетитель сам может сделать выбор: на сайте доступно сравнение мотоциклов, скутеров и квадроциклов по различным параметрам. Также есть возможность самостоятельно, задав характеристики мотоцикла, подобрать мототехнику.
        include ./chunk/footer.pug
    include ./chunk/login.pug                             
