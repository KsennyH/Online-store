extends ./layout/app

block variables
    - const title = "Контакты";

block content 
    .wrapper
        include ./chunk/header.pug

        main.main 
            .breadcrumbs 
                .container 
                    ul.breadcrumbs__list
                        +breadcrumbs("breadcrumbs__link", "index.html", "Главная")
                        li.breadcrumbs__item 
                            span.breadcrumbs__link.breadcrumbs__link--active Контакты
            .contacts 
                .container 
                    .contacts__wrapper 
                        .contacts__map 
                            .map
                                iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2173.1918532609575!2d40.996650215950474!3d56.99689978090434!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x414d1414a6f989d3%3A0x7ebf460cb3848556!2z0YPQuy4g0KHQsNC60LrQviwgNTQsINCY0LLQsNC90L7QstC-LCDQmNCy0LDQvdC-0LLRgdC60LDRjyDQvtCx0LsuLCAxNTMwMTI!5e0!3m2!1sru!2sru!4v1663089123308!5m2!1sru!2sru" width="600" height="400" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade").map__iframe
                        .contacts__content 
                            h1.contacts__title.title Контакты
                            .contacts__info 
                                h2.contacts__label Адрес:
                                p.contacts__text Ивановская область, город Иваново, улица Сакко, дом 54
                            .contacts__info 
                                h2.contacts__label Телефон:
                                +link("contacts__text", "tel:84932134581", "8 (4932) 134-581")
                            .contacts__info 
                                h2.contacts__label Электронная почта:
                                +link("contacts__text", "mailto:motomirIvanovo@email.com", "motomirIvanovo@email.com")
                            .contacts__info 
                                h2.contacts__label Социальные сети:
                                .contacts__network
                                    include ./chunk/social-network.pug
        include ./chunk/footer.pug
                            