section.popup.js-login 
    .popup__container
        .registration 
            h4.registration__title.title Регистрация
            p.registration__description Зарегистрируйтесь для более удобной работы с сайтом.
            form(action="/").registration__form 
                label.registration__label
                    span.registration__subtitle Имя Фамилия:
                    input(type="text", name="name", required).registration__input
                label.registration__label
                    span.registration__subtitle E-mail:
                    input(type="email", name="email", required).registration__input
                label.registration__label
                    span.registration__subtitle.registration__subtitle--norequired Номер телефона:
                    input(type="tel", name="phone").registration__input
                label.registration__label
                    span.registration__subtitle Пароль (длина пароля - не менее 6 символов):
                    input(type="password", name="password", required).registration__input
                label.registration__label
                    span.registration__subtitle Подтвердите пароль:
                    input(type="password", name="repeat-password", required).registration__input
                .registration__checkbox
                    label.checkbox
                        input(type="checkbox", checked).checkbox__input
                        span.checkbox__custom.custom-checkbox
                        span.checkbox__name Я согласен на 
                            a(href="#") обработку персональных данных 
                button(type="submit").btn-modal Зарегистрироваться
            .registration__close
                button.btn-close
