.top-header 
    .container 
        .top-header__inner 
            .top-header__logo 
                include ./logo.pug
            .top-header__actions 
                .top-header__form 
                    include ./search-form.pug
                .top-header__users-wrapper 
                    a(href="#" aria-label="Личный кабинет" data-user="user-login").user.js-login
                        +svg("user__icon", "user-login")
                        span.user__label Личный кабинет
                    a(href="cart.html" aria-label="Корзина" data-user="user-cart").user
                        .user__counter
                            +svg("user__icon", "user-cart")
                            span.user__quantity
                        span.user__label Корзина
            .top-header__info 
                include ./address-information