extends ./layout/app

block variables
    - const title = "Корзина";

block content 
    .wrapper
        include ./chunk/header.pug

        main.main 
            .breadcrumbs 
                .container 
                    ul.breadcrumbs__list
                        +breadcrumbs("breadcrumbs__link", "index.html", "Главная")
                        li.breadcrumbs__item 
                            span.breadcrumbs__link.breadcrumbs__link--active Корзина
            section.cart
                .container 
                    h1.cart__title.title Корзина товаров
                    .cart-header
                        .card-header__name Название
                        .card-header__count Количество
                        .card-header__price Цена
                    .cart-products 
                        +cart-product("outfit-1.jpeg", "Перчатки", "MCP Мотоперчатки классические Wicklow", "2 500")
                        +cart-product("3.jpg", "Мотоцикл", "IRBIS TTR 110", "36 500")
                        +cart-product("outfit-9.jpeg", "Шлем", "SHOEI Мотошлем NEOTECH EXCURSION", "50 000")
                    .cart-footer
                        .cart-footer__total 
                            span Всего:
                            span 89 000 руб.
        include ./chunk/footer.pug
    include ./chunk/login.pug