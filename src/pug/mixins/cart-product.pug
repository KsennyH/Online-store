mixin cart-product(img, alt, title, price)
    .cart-product 
        .cart-product__img 
            img(src="@img/" + img, alt=alt)
        .cart-product__title #{title}
        .cart-product__counter
            .counter 
                button(type="button", data-button="down").counter__btn.counter__btn--down -
                input(type="number", data-counter, value="1").counter__input
                button(type="button", data-button="up").counter__btn.counter__btn--up +
        .cart-product__price 
            p #{price}
        button(type="button").cart-product__deleate.btn-close
            span 